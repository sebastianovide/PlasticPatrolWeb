<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="20270000" id="uk.co.plasticpatrol" ios-CFBundleIdentifier="com.lewismakesapps.Plastic-Patrol" ios-CFBundleVersion="2.27.0" version="2.27.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Planet Patrol</name>
    <description>
        Fighting Pollution in the UK Waterways.
    </description>
    <author email="geovation@geovation.uk" href="https://geovation.uk/">Geovation</author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="CameraUsesGeolocation" value="true"/>
    <preference name="Orientation" value="portrait"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon density="ldpi" src="res/icon/android/ldpi.png"/>
        <icon density="mdpi" src="res/icon/android/mdpi.png"/>
        <icon density="hdpi" src="res/icon/android/hdpi.png"/>
        <icon density="xhdpi" src="res/icon/android/xhdpi.png"/>
        <icon density="xxhdpi" src="res/icon/android/xxhdpi.png"/>
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png"/>
        <splash density="land-hdpi" src="res/screen/android/Android-HDPI-landscape.png"/>
        <splash density="land-ldpi" src="res/screen/android/Android-LDPI-landscape.png"/>
        <splash density="land-mdpi" src="res/screen/android/Android-MDPI-landscape.png"/>
        <splash density="land-xhdpi" src="res/screen/android/Android-XHDPI-landscape.png"/>
        <splash density="land-xxhdpi" src="res/screen/android/Android-XXHDPI-landscape.png"/>
        <splash density="land-xxxhdpi" src="res/screen/android/Android-XXXHDPI-landscape.png"/>
        <splash density="port-hdpi" src="res/screen/android/Android-HDPI-portrait.png"/>
        <splash density="port-ldpi" src="res/screen/android/Android-LDPI-portrait.png"/>
        <splash density="port-mdpi" src="res/screen/android/Android-MDPI-portrait.png"/>
        <splash density="port-xhdpi" src="res/screen/android/Android-XHDPI-portrait.png"/>
        <splash density="port-xxhdpi" src="res/screen/android/Android-XXHDPI-portrait.png"/>
        <splash density="port-xxxhdpi" src="res/screen/android/Android-XXXHDPI-portrait.png"/>
        <splash density="hdpi" src="res/screen/android/Android-HDPI-portrait.png"/>
        <splash density="ldpi" src="res/screen/android/Android-LDPI-portrait.png"/>
        <splash density="mdpi" src="res/screen/android/Android-MDPI-portrait.png"/>
        <splash density="xhdpi" src="res/screen/android/Android-XHDPI-portrait.png"/>
        <splash density="xxhdpi" src="res/screen/android/Android-XXHDPI-portrait.png"/>
        <splash density="xxxhdpi" src="res/screen/android/Android-XXXHDPI-portrait.png"/>
        <resource-file src="google-services.json" target="app/google-services.json"/>
        <preference name="android-minSdkVersion" value="22"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <icon src="res/icon/ios/100.png" width="100"/>
        <icon src="res/icon/ios/1024.png" width="1024"/>
        <icon src="res/icon/ios/114.png" width="114"/>
        <icon src="res/icon/ios/120.png" width="120"/>
        <icon src="res/icon/ios/128.png" width="128"/>
        <icon src="res/icon/ios/144.png" width="144"/>
        <icon src="res/icon/ios/152.png" width="152"/>
