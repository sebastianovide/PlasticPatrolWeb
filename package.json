{
  "name": "plastic-patrol",
  "title": "Plastic Patrol",
  "version": "2.27.1",
  "public": true,
  "homepage": "./",
  "dependencies": {
    "@capacitor/android": "2.4.7",
    "@capacitor/cli": "^2.4.7",
    "@capacitor/core": "^2.4.7",
    "@capacitor/ios": "2.4.7",
    "@ionic/pwa-elements": "^3.0.2",
    "@material-ui/core": "^4.6.1",
    "@material-ui/icons": "^4.5.1",
    "@sentry/browser": "^6.2.1",
    "@types/react-circular-progressbar": "^1.1.0",
    "blueimp-load-image": "2.23",
    "classnames": "^2.2.6",
    "cordova": "^10.0.0",
    "cordova-plugin-camera-with-exif": "^1.3.1",
    "dms2dec": "^1.1.0",
    "firebase": "^8.2.10",
    "immutable": "^4.0.0-rc.12",
    "jetifier": "^1.6.6",
    "localforage": "^1.7.3",
    "lodash": "^4.17.15",
    "mapbox-gl": "1",
    "md5": "^2.2.1",
    "phonegap-plugin-barcodescanner": "^8.1.0",
    "rc-progress": "^3.0.0",
    "react": "^17.0.1",
    "react-circular-progressbar": "^2.0.3",
    "react-dom": "^17.0.1",
    "react-firebaseui": "^4.0.0",
    "react-router-dom": "^5.1.2",
    "react-select": "^4.2.1",
    "react-swipe": "^6.0.4",
    "react-virtualized": "^9.21.2",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.5",
    "rxjs": "^6.5.5",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "web-vitals": "^1.1.0",
    "worker-loader": "^3.0.8"
  },
  "scripts": {
    "start": "HTTPS=true && cross-env ./scripts/runWithVars.sh 'react-scripts start'",
    "build": "npm run build:react",
    "test": "npm run app:test && npm run functions:test",
    "app:test": "react-scripts test --watchAll=false --env=jsdom --forceExit",
    "app:test:watch": "react-scripts test --watchAll=false --env=jsdom --forceExit",
    "eject": "react-scripts eject",
    "backup": "cross-env ./scripts/backup.sh",
    "serve-prod": "npm run build:react && http-server build",
    "build:ios": "cross-env ./scripts/runWithVars.sh 'mkdir -p ./cordova-app/www/ && cp -a ./build/* ./cordova-app/www/ && cd cordova-app && cordova platforms add ios ; cordova build ios --prod --release --device --buildFlag=\"-UseModernBuildSystem=0\" --buildConfig build.json && cd ..'",
    "build:ios:dev": "cross-env ./scripts/runWithVars.sh 'mkdir -p ./cordova-app/www/ && cp -a ./build/* ./cordova-app/www/ && cd cordova-app && cordova platforms add ios ; cordova build ios --debug --buildFlag=\"-UseModernBuildSystem=0\" && cd ..'",
    "build:android": "cross-env ./scripts/runWithVars.sh 'mkdir -p ./cordova-app/www/ && cp -a ./build/* ./cordova-app/www/ && cd cordova-app && cordova platforms add android ; cordova build android --prod --release --buildConfig build.json && cd ..'",
    "build:android:dev": "cross-env ./scripts/runWithVars.sh 'mkdir -p ./cordova-app/www/ && cp -a ./build/* ./cordova-app/www/ && cd cordova-app && cordova platforms add android ; cordova build android && cd ..'",
    "build:react": "cross-env ./scripts/runWithVars.sh 'react-scripts build'",
    "beta:android": "cd cordova-app; fastlane android beta --verbose",
    "beta:ios": "cd cordova-app; fastlane ios beta",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "start:prod": "npm run build:react && http-server build -S -o",
    "functions:test": "cd functions && npm run test",
    "storybook": "start-storybook",
    "test:cypress": "cypress open",
    "test:firebase": "firebase emulators:exec --only firestore \"yarn test:firestore\"",
    "test:firestore": "mocha --exit test/firestore.spec.js",
    "test:initandtest-firebase": "firebase setup:emulators:firestore && yarn test:firebase",
    "run:cypress": "cypress run",
    "verifyUser": "ts-node ./scripts/verifyUser",
    "capacitor:build:android:dev": "cross-env ./scripts/runWithVars.sh 'npx jetify && npx cap sync android && node scripts/changeVersion.js && cd android && ./gradlew build && cd ..'",
    "capacitor:build:android": "cross-env ./scripts/runWithVars.sh 'npx jetify && npx cap sync android && node scripts/changeVersion.js && fastlane android sign'",
    "capacitor:build:ios:dev": "cross-env ./scripts/runWithVars.sh 'npx cap sync ios && node scripts/changeVersion.js && cd ios && xcodebuild -workspace App/App.xcworkspace -scheme App -sdk iphonesimulator -configuration Debug -archivePath build/App archive -UseModernBuildSystem=YES && cd ..'",
    "capacitor:build:ios": "cross-env ./scripts/runWithVars.sh 'npx cap sync ios && node scripts/changeVersion.js && fastlane ios sign'",
    "capacitor:beta:ios": "fastlane ios beta --verbose",
    "capacitor:beta:android": "fastlane android beta --verbose",
    "capacitor:resources": "cordova-res --skip-config --copy"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.2.4",
    "@storybook/react": "^6.1.21",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "@types/blueimp-load-image": "^2.23.8",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.149",
    "@types/mapbox-gl": "1",
    "@types/node": "^14.14.33",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-select": "^4.0.13",
    "@types/react-swipe": "^6.0.0",
    "@types/react-virtualized": "^9.21.9",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "^1.8.2",
    "@types/uuid": "^8.0.0",
    "cordova-res": "^0.15.3",
    "coveralls": "^3.0.7",
    "cross-env": "^7.0.2",
    "cypress": "^6.6.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "faker": "^5.4.0",
    "firebase-admin": "^9.5.0",
    "firebase-tools": "^9.5.0",
    "first-input-delay": "^0.1.3",
    "http-server": "^0.12.3",
    "jimp": "^0.16.1",
    "lint-staged": ">=10",
    "mocha": "^8.3.0",
    "ncp": "^2.0.0",
    "node-sass": "^5.0.0",
    "plist": "^3.0.1",
    "prettier": "^2.0.5",
    "prompt-sync": "^4.2.0",
    "random-location": "^1.1.2",
    "react-scripts": "^4.0.3",
    "rimraf": "^3.0.0",
    "source-map-loader": "^2.0.1",
    "storybook": "^6.1.21",
    "storybook-addon-material-ui": "^0.9.0-alpha.21",
    "ts-sinon": "^2.0.1",
    "typescript": "^4.2.3",
    "uuid": "^8.3.0",
    "wait-on": "^5.0.1",
    "workbox-cli": "^6.1.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,md,json}": "prettier --list-different --write --config .prettierrc.json"
  }
}
